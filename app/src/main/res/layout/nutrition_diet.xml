<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nutritionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition and Diet"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/imcCalculatorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IMC Calculator"
        android:backgroundTint="?colorPrimary"
        android:textColor="?colorOnPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/dietPlanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Plan"
        android:backgroundTint="?colorPrimary"
        android:textColor="?colorOnPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/nutritionismTipsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutritionism Tips"
        android:backgroundTint="?colorPrimary"
        android:textColor="?colorOnPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/nutritionistConsultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutritionist Consult"
        android:backgroundTint="?colorPrimary"
        android:textColor="?colorOnPrimary"
        android:layout_marginBottom="8dp" />
</LinearLayout>
