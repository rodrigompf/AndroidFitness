<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:minHeight="700dp"
        android:background="@drawable/rounded_cornour"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <!-- Profile Title -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="@color/Purplerlight" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/fitness_logo"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:elevation="4dp"
            android:padding="2dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/Purplerlight" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/lightPurple" />

        <!-- Age -->
        <TextView
            android:id="@+id/ageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/Purplerlight" />

        <TextView
            android:id="@+id/userAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="29"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/lightPurple" />

        <!-- Resumo (Summary) -->
        <TextView
            android:id="@+id/resumoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumo:"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/Purplerlight" />

        <TextView
            android:id="@+id/userResumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John is passionate about technology and enjoys tackling challenges in software development. He thrives on problem-solving and is constantly learning new things."
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/lightPurple" />

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/Purplerlight" />

        <TextView
            android:id="@+id/userDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John is a software developer who loves outdoor activities and reading fiction novels. He enjoys exploring new places."
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/lightPurple" />

        <!-- Gallery -->
        <TextView
            android:id="@+id/galleryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery:"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/Purplerlight" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/galleryContainer"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        </HorizontalScrollView>

        <!-- Edit Button -->
        <Button
            android:id="@+id/Edit_Gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Gallery"
            android:layout_marginTop="16dp"
            android:backgroundTint="?android:attr/colorAccent"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primaryPurple"
            android:elevation="4dp"
            android:padding="12dp"
            android:gravity="center" />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="16dp"
            android:backgroundTint="?android:attr/colorAccent"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primaryPurple"
            android:elevation="4dp"
            android:padding="12dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
